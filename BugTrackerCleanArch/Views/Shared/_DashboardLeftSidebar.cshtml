    <a class="left-sidebar-link @(controller == "Team" ? "active-link" : "")" asp-area="" asp-controller="Team" asp-action="Index">TEAMS</a>
    <span class="left-sidebar-link @(controller == "" ? "active-link" : "")" id="invite-link">+ INVITE</span>
}

