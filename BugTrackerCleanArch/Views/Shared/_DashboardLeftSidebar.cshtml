@{
    var action = ViewContext.RouteData.Values["action"].ToString();
    var controller = ViewContext.RouteData.Values["controller"].ToString();
}

@if (User.Identity.IsAuthenticated)
{
    <a class="left-sidebar-link @(controller == "Project" ? "active-link" : "")" asp-area="" asp-controller="Project" asp-action="Index">PROJECTS</a>
    <a class="left-sidebar-link @(controller == "Ticket" ? "active-link" : "")" asp-area="" asp-controller="Ticket" asp-action="Index">TICKETS</a>
}

@if (User.IsInRole("TeamMember"))
{
    <a class="left-sidebar-link @(controller == "Category" ? "active-link" : "")" asp-area="" asp-controller="Category" asp-action="Index">CATEGORIES</a>
    <a class="left-sidebar-link @(controller == "Product" ? "active-link" : "")" asp-area="" asp-controller="Products" asp-action="Index">PRODUCTS</a>
    <span class="left-sidebar-link @(controller == "" ? "active-link" : "")" id="invite-link">+ INVITE</span>
}

@if (User.IsInRole("TeamLead"))
{
    <a class="left-sidebar-link @(controller == "Category" ? "active-link" : "")" asp-area="" asp-controller="Category" asp-action="Index">CATEGORIES</a>
